{
	"name": "SP Editor",
	"homepage_url": "https://github.com/tavikukko/Chrome-SP-Editor",
	"version": "4.4.0",
	"description": "Create and update SharePoint Online/SP2013/SP2016 css/js files, inject files to web, manage web properties and list Webhook",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"96": "icons/icon96.png",
		"128": "icons/icon128.png"
	},
	"web_accessible_resources": [
    "app/js/alertify.js",
    "app/js/pnp.js",
    "app/js/system.js",
    "app/js/common.es5.umd.bundle.js",
    "app/js/config-store.es5.umd.bundle.js",
    "app/js/graph.es5.umd.bundle.js",
    "app/js/logging.es5.umd.bundle.js",
    "app/js/odata.es5.umd.bundle.js",
    "app/js/pnpjs.es5.umd.bundle.js",
    "app/js/sp-addinhelpers.es5.umd.bundle.js",
    "app/js/sp-clientsvc.es5.umd.bundle.js",
    "app/js/sp.es5.umd.bundle.js",
    "app/js/sp-taxonomy.es5.umd.bundle.js"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "app/background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": true,
      "css": [
        "app/css/alertify.css"
      ],
      "js": [
        "app/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "https://*/*",
    "http://*/*",
    "tabs",
    "downloads"
  ],
  "content_security_policy": "script-src * 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
